{
	"name": "@habitutor/auth",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		},
		"./*": {
			"types": "./dist/*.d.mts",
			"default": "./dist/*.mjs"
		}
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"auth:generate": "bunx @better-auth/cli@latest generate --output ../db/src/schema/auth.ts --config ./src/index.ts --yes",
		"check-types": "tsgo --noEmit"
	},
	"devDependencies": {
		"tsdown": "catalog:",
		"@habitutor/config": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@habitutor/db": "workspace:*",
		"arktype": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"resend": "^6.9.2"
	}
}
