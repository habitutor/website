{
	"name": "@habitutor/auth",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"auth:generate": "bunx @better-auth/cli@latest generate --output ../db/src/schema/auth.ts --config ./src/index.ts --yes",
		"check-types": "bunx @typescript/native-preview@latest --noEmit"
	},
	"devDependencies": {
		"tsdown": "catalog:",
		"@habitutor/config": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@habitutor/db": "workspace:*",
		"arktype": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"resend": "^6.6.0"
	}
}
