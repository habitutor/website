{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"remoteCache": {
		"enabled": true,
		"teamSlug": "habitutor-production"
	},
	"tasks": {
		"build": {
			"cache": true,
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".output/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"cache": true,
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false,
			"persistent": true
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false,
			"persistent": true
		},
		"db:start": {
			"cache": false,
			"persistent": true
		},
		"db:stop": {
			"cache": false,
			"persistent": true
		},
		"db:watch": {
			"cache": false,
			"persistent": true
		},
		"db:down": {
			"cache": false,
			"persistent": true
		},
		"db:seed": {
			"cache": false,
			"persistent": true
		},
		"db:reset": {
			"cache": false,
			"persistent": true
		},
		"auth:generate": {
			"cache": false
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": ["**/*.test.ts", "**/*.spec.ts"]
		}
	}
}
