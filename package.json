{
	"name": "habitutor",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"hono": "^4.10.6",
			"@orpc/server": "^1.11.3",
			"@orpc/openapi": "^1.11.3",
			"@orpc/arktype": "^1.11.3",
			"better-auth": "^1.3.28",
			"dotenv": "^17.2.2",
			"drizzle-orm": "^0.44.2",
			"arktype": "^2.1.27",
			"typescript": "^5.8.2",
			"tsdown": "^0.16.6",
			"wrangler": "^4.50.0",
			"@orpc/client": "^1.11.3"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"build:packages": "turbo build --filter='./packages/*'",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @habitutor/db db:push",
		"db:studio": "turbo -F @habitutor/db db:studio",
		"db:generate": "turbo -F @habitutor/db db:generate",
		"db:migrate": "turbo -F @habitutor/db db:migrate",
		"db:start": "turbo -F @habitutor/db db:start",
		"db:watch": "turbo -F @habitutor/db db:watch",
		"db:stop": "turbo -F @habitutor/db db:stop",
		"db:down": "turbo -F @habitutor/db db:down",
		"db:seed": "turbo -F @habitutor/db db:seed"
	},
	"dependencies": {
		"better-auth": "^1.3.34",
		"dotenv": "^17.2.2"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.3.7",
		"tsdown": "^0.16.6",
		"@types/node": "^24.10.1"
	},
	"packageManager": "bun@1.3.2"
}
