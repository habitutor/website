{
  "name": "habitutor",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.11.1",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/arktype": "^1.12.2",
      "better-auth": "^1.4.7",
      "dotenv": "^17.2.2",
      "drizzle-orm": "^0.45.1",
      "arktype": "^2.1.29",
      "typescript": "^5.8.2",
      "tsdown": "^0.17.3",
      "@orpc/client": "^1.12.2"
    }
  },
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "build:packages": "turbo build --filter='./packages/*'",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @habitutor/db db:push",
    "db:studio": "turbo -F @habitutor/db db:studio",
    "db:generate": "turbo -F @habitutor/db db:generate",
    "db:migrate": "turbo -F @habitutor/db db:migrate",
    "db:start": "turbo -F @habitutor/db db:start",
    "db:watch": "turbo -F @habitutor/db db:watch",
    "db:stop": "turbo -F @habitutor/db db:stop",
    "db:down": "turbo -F @habitutor/db db:down",
    "db:seed": "turbo -F @habitutor/db db:seed",
    "db:reset": "turbo -F @habitutor/db db:reset",
    "auth:generate": "turbo -F @habitutor/auth auth:generate"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "turbo": "^2.6.1",
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.3"
  },
  "packageManager": "bun@1.3.2"
}
